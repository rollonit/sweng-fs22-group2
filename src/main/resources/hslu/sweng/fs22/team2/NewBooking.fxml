<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="15.0" prefHeight="400.0" prefWidth="600.0"
          vgap="10" xmlns="http://javafx.com/javafx/16"
          fx:controller="hslu.sweng.fs22.team2.ui.NewBookingController">
  <Text text="Make New Booking" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0">
    <font>
      <Font size="32.0"/>
    </font>
  </Text>

  <Label text="Screening" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
  <ComboBox fx:id="screeningPicker" onAction="#onScreeningPick" GridPane.columnIndex="1" GridPane.columnSpan="2"
            GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"/>

  <Button fx:id="makeBookingButton" onAction="#makeBooking" text="Make Booking" GridPane.columnIndex="2"
          GridPane.halignment="RIGHT" GridPane.rowIndex="3"/>
  <ListView fx:id="seatsTable" GridPane.columnSpan="3" GridPane.rowIndex="2">

  </ListView>
  <columnConstraints>
    <ColumnConstraints/>
    <ColumnConstraints minWidth="300.0"/>
    <ColumnConstraints/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints/>
    <RowConstraints/>
    <RowConstraints/>
    <RowConstraints/>
    <RowConstraints/>
  </rowConstraints>
</GridPane>
